<div class="new-book " id="new_book">
    <h3 class="width">New Book</h3>

        <%= form_with model: book do |f| %>

                <div class="field ">
                  <div class="">
                    <%= f.label :title %>
                  </div>
                  <div class="row">
                    <%= f.text_field :title, class: "col-xs-12",id:"text_field" %>
                  </div>
                </div>

                <div class="field">
                  <div class="">
                    <%= f.label :感想%>
                  </div>
                  <div class="row">
                    <div class="">
                      <%= f.text_area :body, class: "col-xs-12",id:"text_area" %>
                    </div>
                  </div>

                </div>

                <div class="row">
                  <div class="">
                    <%= f.submit '投稿' , class: "btn btn-primary col-xs-12 "  %>
                  </div>
                </div>

        <% end %>
</div>
