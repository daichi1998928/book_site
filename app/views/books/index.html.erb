
<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'users/profile', user: @user %>
      <%= render 'books/new', book: @book %>

    </div>

   <div class="col-xs-9">
      <div class="search-form">
      <%= form_with url: books_search_path, method: (:get) , local: true do |f| %>
        <%= f.text_field :title, placeholder: "本のタイトルを入力してね！" %>
        <%= submit_tag 'Search' %>
      <% end %>

    </div>
     <table class="main-wrapper table table-striped ">
      <h1>Books</h1>
        <thead>
          <tr>
            <th ></th>
            <th>タイトル</th>
            <th>感想</th>
          </tr>
        </thead>
      <% @books.each do |book| %>
      <tr>
        <td class="profile-image">
            <%= link_to user_path(book.user) do %>
              <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb"%>
            <% end %>
        </td>
        <td class="book-detail"><%= link_to book.title, book_path(book) %></td>
        <td class="book-detail"><%= book.body %></td>
        <td> <%= link_to "#{book.post_comments.count} コメント", book_path(book) %></td>

      </tr>



      <% end %>
    </table>
   </div>
  </div>


</div>
