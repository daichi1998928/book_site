<h1>Books</h1>


  <table>
    <tr>
      <th>タイトル</th>
      <th>感想</th>
    </tr>

    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><a><%= link_to "編集", edit_book_path(book) %></a></td>
      <td><%= link_to "詳細", book_path(book) %></td>
      <td><%= link_to "削除", book_path(book), method: :delete %></td>

    </tr>



    <% end %>
  </table>


<h3>新規投稿</h3>

<%= form_for(@book) do |f| %>

  <h4>タイトル</h4>

  <%= f.text_field :title %>

  <h4>感想</h4>

  <%= f.text_area :body %>

  <%= f.submit '投稿' %>

<% end %>
