<% if user_signed_in? %>
    <% if book_show.favorited_by?(current_user) %>
        <li>
        <i class="fa fa-heart" aria-hidden="true" style= "color: red;"></i>
        <%= link_to book_favorites_path(book_show), method: :delete,remote: true do %>
            <%= book_show.favorites.count %> いいね
        <% end %>
        </li>
    <% else %>
        <li>
        <%= link_to book_favorites_path(book_show), method: :post, remote: true do %>
            <i class="fa fa-heart" ></i>
            <%= book_show.favorites.count %> いいね
        <% end %>
        </li>
    <% end %>
<% end %>